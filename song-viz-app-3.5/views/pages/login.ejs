<!DOCTYPE html>
<html lang="en">

<head>
    <!-- views/partials/head.ejs -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Visualization App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/login.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- views/partials/head.ejs -->






    <title>Login - Music Visualization App</title>
</head>

<body>
    <%- include('../partials/nav') %>
        <div class="main-container">
            <div class="login-wrapper">
                <div class="login-card">
                    <div class="login-info">
                        <h2>Welcome Back!</h2>
                        <hr style="color: white;">
                        <p>Sign in to continue exploring millions of songs, artists, and playlists. Customize your
                            listening experience with ease!</p>
                     
                    </div>

                    <div class="login-form-container">
                       
                        <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <% errors.forEach(function (error) { %>
                                    <div>
                                        <%= error.msg %>
                                    </div>
                                    <% }); %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                            </div>
                            <% } %>

                                <form id="loginForm" action="/auth/login" method="POST" class="login-form">
                                    <h4 class="login-title">Login</h4>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email"
                                            value="<%= typeof email !== 'undefined' ? email : '' %>" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                            required>
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100">Login</button>
                                </form>

                                <p class="mt-3 text-center">
                                    Don't have an account? <a href="/register">Register here</a>
                                </p>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../partials/footer') %>

</body>

</html>